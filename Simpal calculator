import java.util.Scanner;

public class calculator {

	public static void main(String[] args) {
		Scanner scn = new Scanner (System.in);
		
		System.out.println("Enter the first number :");
		int a = scn.nextInt();
		System.out.println("Enter the second number :");
		int b = scn .nextInt();
		System.out.println("Enter any oprator you want from - (+,-,*./)");
		String oprator = scn.next();
		System.out.println("You enter the oprator :"+ oprator);
		
		switch(oprator) {
		case "+":
			System.out.println("So you want to  ADD two number");
			System.out.println(a+b);
			break;
		case "-":
			System.out.println("So you want to SUBTRACT two number");
			System.out.println(a-b);
			break;
		case "*":
			System.out.println("So you want to MULTIPLY two number");
			System.out.println(a*b);
			break;
		case "/":
			System.out.println("So you want to DIVID two number");
			System.out.println(a/b);
			break;
			default:
				System.out.println("You entered wrong thing");
		}

	}
}
